{
  "manifest_version": 3,
  "name": "ProPlan",
  "version": "1.0.0",
  "description": "All-in-one productivity solution",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["worker.js"]  // Use "scripts" for background scripts in Firefox
  },
  "action": {
    "default_popup": "ProPlan.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["app.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["ProPlan.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "author": "Mystic Productions",
  "browser_specific_settings": {
    "gecko": {
      "id": "proplan@example.com" 
    }
  }
}